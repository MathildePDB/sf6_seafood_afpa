<section class="p-100 background-2">
	<div class="text-white">
		<h2>Specialities of the day</h2>
		<h3 class="txt-blue">~ Delicious foods ~</h3>
	</div>
	{# cards in foreach with 4 last menu #}
	<div class="m-10 d-flex">
	{% for menu in menus %}
		<div class="col-md-6 px-5" style="width: 25%;">
			<div class="card border-none-radius text-right">
				<img src="{{ asset('images/blog-standard-1.jpg') }}" class="card-img-top card border-none-radius" alt="...">
				<div class="my-4 bg-white">
					<h5 class="card-title py-3">{{ menu.name }}</h5>
					<img src="{{ asset('images/rating.png') }}" alt="" style="width: 20%;">
					<p>${{ menu.price }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>
</section>
