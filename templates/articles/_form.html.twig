{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.author) }}
    {{ form_row(form.description) }}
    {% for image in form.images %}
        <div>
            <img src="{{ asset('assets/uploads/articles/mini/300x300-' ~ image.name) }}" alt="Image" width="150">
            <a href="{{ path('admin_products_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Delete</a>
        </div>
    {% endfor %}
     {{ form_row(form.images) }}
    {{ form_row(form.categories) }}
    {{ form_row(form.tags) }}

    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
